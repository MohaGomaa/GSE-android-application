<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputedtPassword"
            android:layout_width="match_parent"
            app:counterMaxLength="14"
            app:errorTextColor="@color/cardColorOrange"
            android:layout_height="wrap_content">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPassword"
            android:hint="@string/CurrentPinNumber"
            android:inputType="textPassword"
            android:textColor="@color/themeColor"
            android:textColorHint="@color/themeColor"
            android:textSize="15sp"
          />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputedtNewPassword"
            android:layout_width="match_parent"
            app:counterMaxLength="14"
            app:errorTextColor="@color/cardColorOrange"
            android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNewPassword"
            android:hint="@string/NewPinNumber"
            android:inputType="textPassword"
            android:textColor="@color/zxing_result_view"
            android:textColorHint="@color/themeColor"
            android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputedtConPassword"
            android:layout_width="match_parent"
            app:counterMaxLength="14"
            app:errorTextColor="@color/cardColorOrange"
            android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtConPassword"
            android:hint="@string/ConfirmPinNumber"
            android:inputType="textPassword"
            android:textColor="@color/themeColor"
            android:textColorHint="@color/themeColor"
            android:textSize="15sp"
          />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>