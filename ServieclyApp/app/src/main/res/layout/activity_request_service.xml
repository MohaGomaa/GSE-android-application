<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RequestService"
    tools:context=".RequestService">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_layout"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/collapsing"
            android:fitsSystemWindows="true"
            app:title="@string/RequestService"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/cardColorOrange"
            app:expandedTitleTextAppearance="@android:color/black">
            <LinearLayout
                android:gravity="center"
                android:src="@color/overlayBackground"
                android:background="@drawable/hero"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:background="@color/overlayBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">

            <ImageView
                android:maxHeight="100dp"
                style="@style/homeCardImage"
                android:src="@drawable/onlineorder"
                android:id="@+id/img_food"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>
                  </LinearLayout>
                    </LinearLayout>


            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                android:title="@string/RequestService"
                app:titleTextColor="@color/whiteTextColor"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="parallax"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:id="@+id/nestedScrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">
           <LinearLayout
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
                android:orientation="vertical">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="5dp"
                   android:paddingRight="10dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/tvSpGovernmentBody"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:text="@string/GovernmentBody"
                       android:layout_weight="1"/>
                   <com.jaredrummler.materialspinner.MaterialSpinner
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:textSize="15dp"
                       android:id="@+id/spGovernmentBody"
                       android:layout_weight="2"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="8dp"
                       android:layout_marginBottom="18dp"
                       />

               </LinearLayout>
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="5dp"
                   android:paddingRight="10dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/tvSpService"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:text="@string/Service"
                       android:layout_weight="1"/>
                   <com.jaredrummler.materialspinner.MaterialSpinner
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:textSize="15dp"
                       android:id="@+id/spService"
                       android:layout_weight="2"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="8dp"
                       android:layout_marginBottom="18dp"
                       />

               </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="5dp"
                   android:layout_marginBottom="20dp"
                   android:paddingRight="10dp">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:text="@string/Price"
                       android:layout_weight="1"/>

                   <TextView
                       android:id="@+id/tvPrice"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_marginRight="10dp"
                       android:layout_weight="1"
                       android:drawableRight="@drawable/ic_money_black_24dp"
                       android:text="0.0"
                       android:textColor="@color/black"
                       android:textSize="15sp" />


               </LinearLayout>



               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="5dp"
                   android:layout_marginBottom="20dp"

                   android:paddingRight="10dp"
                   >
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tvLanguage"
                       android:layout_marginTop="8dp"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:text="@string/Language"/>
                   <RadioGroup
                       android:id="@+id/radioLanguage"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <RadioButton
                           android:id="@+id/radioArabic"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/Arabic"
                           android:checked="true" />

                       <RadioButton
                           android:id="@+id/radioEnglish"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/English" />
                   </RadioGroup>
               </LinearLayout>
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="5dp"
                   android:paddingRight="10dp">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/tvnOfCopy"
                       android:layout_weight="1"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:text="@string/NumberofCopies"/>
                   <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                       android:layout_width="0dp"
                       android:layout_height="30dp"
                       android:id="@+id/number_button"
                       android:layout_weight="1"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="8dp"
                       android:layout_marginBottom="18dp"
                       app:textSize="8dp"
                       app:backGroundColor="@color/cardColorOrange"
                       app:initialNumber="1"
                       app:finalNumber="20"/>

               </LinearLayout>




           </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/cardColorOrange"
        android:src="@drawable/ic_send_black_24dp"
        android:id="@+id/btn_send"
        android:backgroundTint="@android:color/white"
        app:elevation="6dp"
        android:onClick="sendRequest"
        app:layout_anchor="@id/app_bar_layout"
        app:pressedTranslationZ="12dp"
        app:useCompatPadding="true"
        app:layout_anchorGravity="bottom|right|end"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>