<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Ministry"
    tools:showIn="@layout/app_bar_main"
    style="@style/parent_two.contentLayout">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="@string/ministries"
                    style="@style/viewParent.headerText"
                    android:layout_gravity="bottom"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/todo" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:onClick="gotoHome"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            android:background="@drawable/card_background3"
                            android:padding="10dp">

                            <ImageView
                                android:maxHeight="90dp"
                                style="@style/homeCardImage"

                               />

                            <TextView
                                android:id="@+id/textViewSub1Title"
                                android:text="@string/ministry_of_interior"
                                style="@style/viewParent.headerText.HomeCardTitle" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:onClick="gotoHealthHome"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            android:background="@drawable/card_background4"
                            android:padding="10dp">

                            <ImageView
                                android:maxHeight="90dp"
                                style="@style/homeCardImage"

                                />

                            <TextView
                                android:id="@+id/textView12SubTitle"
                                android:text="@string/ministry_of_health"
                                style="@style/viewParent.headerText.HomeCardTitle" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:onClick="gotoEducationHome"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            android:background="@drawable/card_background3"
                            android:padding="10dp">

                            <ImageView
                                android:maxHeight="90dp"
                                style="@style/homeCardImage"
                                />

                            <TextView
                                android:id="@+id/textViewSubTitle"
                                android:text="@string/Educational_certificates"
                                style="@style/viewParent.headerText.HomeCardTitle" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
<!--
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:onClick="gotoJusticeHome"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            android:background="@drawable/card_background3"
                            android:padding="10dp">

                            <ImageView
                                android:maxHeight="90dp"
                                style="@style/homeCardImage"

                                />

                            <TextView
                                android:id="@+id/textView11Sub1Title"
                                android:text="@string/MinistryofJustice"
                                style="@style/viewParent.headerText.HomeCardTitle" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    -->



                </LinearLayout>



            </LinearLayout>




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
